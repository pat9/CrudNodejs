<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/materialize.css">
    <title>Crud Personas</title>
</head>
<body>
    <%- include('./Navbar') -%>

    <div class="container">
        <div class="row">
            <div class="col s4">
                <h5>Registrar nueva persona</h5>
            </div>
        </div>
        <div class="row">
            <form action="/editar/<%= persona._id%>" method="POST" class="col s12">
                <div class="row">
                    <div class="input-field col s4">
                        <input id="nombre" type="text" name="nombre" value="<%= persona.nombre%>" class="validate">
                        <label for="nombre">Nombre</label>
                    </div>
                    <div class="input-field col s4">
                        <input id="edad" type="number" name="edad" value="<%= persona.edad%>" class="validate">
                        <label for="edad">Edad</label>
                    </div>
                    <div class="input-field col s3">
                        <input id="telefono" type="text" name="telefono" value="<%= persona.telefono%>" class="validate">
                        <label for="telefono">Teléfono</label>
                    </div>
                </div>
                <div class="row">
                    <div class="col s4">
                        <span>Hijos: </span>
                            <p>
                                <label>
                                    <% if(persona.hijos) {%>
                                        <input name="hijos" type="radio" value="Si" checked />
                                    <%}else{%>
                                        <input name="hijos" type="radio" value="Si" />
                                    <%}%>
                                    <span>Sí</span>
                                </label>
                                &nbsp;&nbsp;
                                <label>
                                    <% if(!persona.hijos) {%>
                                        <input name="hijos" type="radio" value="No" checked/>
                                    <%}else{%>
                                        <input name="hijos" type="radio" value="No"/>
                                    <%}%>
                                    
                                    <span>No</span>
                                </label>
                            </p>
                    </div>

                    <div class="input-field col s4">
                            <select name="estadocivil">
                              <option value="" disabled selected>Seleccione...</option>
                              <% if(!persona.estadocivil == "Soltero") {%>
                                <option value="Soltero" selected>Soltero</option>
                              <%}else{%>
                                <option value="Soltero">Soltero</option>
                              <%}%>
                              
                              <% if(!persona.estadocivil == "Casado") {%>
                                <option value="Casado" selected>Casado</option>
                              <%}else{%>
                                <option value="Casado">Casado</option>
                              <%}%>
                              
                              <% if(!persona.estadocivil == "Otro") {%>
                                <option value="Otro" selected>Otro</option>
                              <%}else{%>
                                <option value="Otro">Otro</option>
                              <%}%>
                                           
                            </select>
                            <label>Estado civil</label>
                    </div>

                    <div class="col s4">
                        <span>Intereses: </span>
                        <div class="row">
                            <% for(var i = 0; i<persona.intereses.length; i++){ %>
                                <% if(persona.intereses[i].value == true){ %>
                                    <label>
                                        <input type="checkbox" name="<%= persona.intereses[i].key %>" checked/>
                                        <span><%= persona.intereses[i].key %>&nbsp;&nbsp;</span>
                                    </label>
                                <%}else{%>
                                    <label>
                                        <input type="checkbox" name="<%= persona.intereses[i].key %>"/>
                                        <span><%= persona.intereses[i].key %>&nbsp;&nbsp;</span>
                                    </label> 
                                <%}%>
                            <% } %>
                        </div>
                        
                        
                       
                      
                            
                        
                    </div>

                </div>
                <button class="waves-effect waves-light btn" type="submit">Enviar</button>
            </form>    
        </div>
    </div>
    <script src="/js/materialize.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var elems = document.querySelectorAll('select');
            var instances = M.FormSelect.init(elems);
        })
    </script>
</body>
</html>