<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/materialize.css">
    <title>Crud Personas</title>
</head>
<body>
    <%- include('./Navbar') -%>

    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Edad</th>
                    <th>Teléfono</th>
                    <th>Estado Civil</th>
                    <th>Hijos</th>
                    <th>Intereses</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i = 0; i<personas.length; i++){ %>
                    <tr>
                        <td><%= personas[i].nombre %></td>
                        <td><%= personas[i].edad %></td>
                        <td><%= personas[i].telefono %></td>
                        <td><%= personas[i].estadocivil %></td>
                        <td>
                            <% if( personas[i].hijos  == true){ %>
                                Sí
                            <%}else{%>
                                No
                            <%}%>
                        </td>
                      
                        <td><% for(var j = 0; j<personas[i].intereses.length; j++){ %>
                            <% if(personas[i].intereses[j].value == true){ %>
                                <%= personas[i].intereses[j].key %>
                            <%}%>
                        <% } %></td>
                        <td><a href="/editar/<%= personas[i]._id%>">Editar</a>&nbsp;&nbsp;<a href="/eliminar/<%= personas[i]._id%>">Eliminar</a></td>
                    </tr>        
                <% } %>
            </tbody>
        </table>
    </div>
    <script src="/js/materialize.js"></script>
</body>
</html>